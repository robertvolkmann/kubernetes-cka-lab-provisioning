- name: create script directory
  file:
    path: ~/.kube/
    state: directory

- name: change configuration
  shell: |
    {% for cluster in kubernetes.cluster %}
    sed -i "s/name: kubernetes/name: kubernetes-{{ cluster.name }}/g" ~/{{ cluster.name }}
    sed -i "s/cluster: kubernetes/cluster: kubernetes-{{ cluster.name }}/g" ~/{{ cluster.name }}
    sed -i "s/user: kubernetes-admin/user: kubernetes-admin-{{ cluster.name }}/g" ~/{{ cluster.name }}
    sed -i "s/name: kubernetes-{{ cluster.name }}-admin@kubernetes/name: {{ cluster.name }}/g" ~/{{ cluster.name }}
    sed -i "s/name: kubernetes-{{ cluster.name }}-admin/name: kubernetes-admin-{{ cluster.name }}/g" ~/{{ cluster.name }}
    sed -i '/current-context: kubernetes-admin@kubernetes/d' ~/{{ cluster.name }}
    {% endfor %}

- name: change configuration
  shell: KUBECONFIG={% for cluster in kubernetes.cluster %}~/{{ cluster.name }}{% if not loop.last %}:{% endif %}{% endfor %} kubectl config view --flatten >> ~/.kube/config

  